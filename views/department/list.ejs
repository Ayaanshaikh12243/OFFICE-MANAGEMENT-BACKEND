<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Office Management System</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  
  <%- include('../partials/header') %>
  <%- include('../partials/messages') %>
  
  <div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
      <div class="col-md-6">
        <h2><i class="bi bi-diagram-3"></i> Departments</h2>
        <p class="text-muted">Manage all departments</p>
      </div>
      <div class="col-md-6 text-end">
        <a href="/departments/add" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Add Department
        </a>
      </div>
    </div>
    
    <!-- Departments Table -->
    <div class="card">
      <div class="card-body">
        <% if (departments.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Code</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Employees</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% departments.forEach(department => { %>
                  <tr>
                    <td><span class="badge bg-secondary"><%= department.code %></span></td>
                    <td><strong><%= department.name %></strong></td>
                    <td><%= department.description %></td>
                    <td>
                      <span class="badge bg-info"><%= department.employeeCount %></span>
                    </td>
                    <td><%= new Date(department.createdAt).toLocaleDateString() %></td>
                    <td>
                        <a href="/departments/edit/<%= department._id %>" class="btn btn-sm btn-warning">
                          <i class="bi bi-pencil"></i> Edit
                        </a>
                        <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('<%= department._id %>', '<%= department.name %>', <%= department.employeeCount || 0 %>)">
                          <i class="bi bi-trash"></i> Delete
                        </button>
                      </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          
          <!-- Pagination -->
          <% if (totalPages > 1) { %>
            <nav>
              <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                </li>
                
                <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                  </li>
                <% } %>
                
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                </li>
              </ul>
            </nav>
          <% } %>
        <% } else { %>
          <div class="text-center py-5">
            <i class="bi bi-folder-x text-muted" style="font-size: 4rem;"></i>
            <p class="text-muted mt-3">No departments found</p>
            <a href="/departments/add" class="btn btn-primary">Add First Department</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <!-- Single Delete Confirmation Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the department "<strong id="departmentName"></strong>"?</p>
          <div id="warningMessage" class="alert alert-warning mt-2" style="display: none;">
            <strong>Warning:</strong> This department has <span id="employeeCount"></span> employee(s). You cannot delete it.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <form id="deleteForm" method="POST" class="d-inline" style="display: inline;">
            <button type="submit" id="deleteButton" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  
  <!-- Delete confirmation script -->
  <script>
    function confirmDelete(departmentId, departmentName, employeeCount) {
      console.log('Delete clicked - ID:', departmentId, 'Name:', departmentName, 'Employee Count:', employeeCount);
      
      // Set department name in modal
      document.getElementById('departmentName').textContent = departmentName;
      
      // Get elements
      const warningMsg = document.getElementById('warningMessage');
      const deleteForm = document.getElementById('deleteForm');
      const deleteBtn = document.getElementById('deleteButton');
      
      // Ensure employeeCount is a number
      const count = parseInt(employeeCount) || 0;
      console.log('Parsed employee count:', count);
      
      if (count > 0) {
        // Show warning and hide delete button
        console.log('Department has employees - hiding delete button');
        warningMsg.style.display = 'block';
        document.getElementById('employeeCount').textContent = count;
        deleteForm.style.display = 'none';
      } else {
        // Hide warning and show delete button
        console.log('Department has no employees - showing delete button');
        warningMsg.style.display = 'none';
        deleteForm.style.display = 'inline';
        deleteBtn.style.display = 'inline-block';
        deleteBtn.disabled = false;
        // Set form action
        deleteForm.action = '/departments/delete/' + departmentId;
        console.log('Form action set to:', deleteForm.action);
      }
      
      // Show modal
      var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
      deleteModal.show();
    }
  </script>
</body>
</html>
