<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Office Management System</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  
  <%- include('../partials/header') %>
  <%- include('../partials/messages') %>
  
  <div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/employees">Employees</a></li>
            <li class="breadcrumb-item active">Employee Details</li>
          </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
          <h2><i class="bi bi-person-circle"></i> Employee Details</h2>
          <div>
            <a href="/employees/edit/<%= employee._id %>" class="btn btn-warning">
              <i class="bi bi-pencil"></i> Edit
            </a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
              <i class="bi bi-trash"></i> Delete
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Employee Information Cards -->
    <div class="row">
      <!-- Personal Information -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person"></i> Personal Information</h5>
          </div>
          <div class="card-body">
            <table class="table table-borderless">
              <tr>
                <th width="40%">Full Name:</th>
                <td><strong><%= employee.firstName %> <%= employee.lastName %></strong></td>
              </tr>
              <tr>
                <th>Email:</th>
                <td><%= employee.email %></td>
              </tr>
              <tr>
                <th>Phone:</th>
                <td><%= employee.phone %></td>
              </tr>
              <tr>
                <th>Status:</th>
                <td>
                  <% if (employee.status === 'active') { %>
                    <span class="badge bg-success">Active</span>
                  <% } else if (employee.status === 'inactive') { %>
                    <span class="badge bg-danger">Inactive</span>
                  <% } else { %>
                    <span class="badge bg-warning">On Leave</span>
                  <% } %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      
      <!-- Job Information -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-briefcase"></i> Job Information</h5>
          </div>
          <div class="card-body">
            <table class="table table-borderless">
              <tr>
                <th width="40%">Job Title:</th>
                <td><strong><%= employee.jobTitle %></strong></td>
              </tr>
              <tr>
                <th>Department:</th>
                <td><span class="badge bg-secondary"><%= employee.department.name %></span></td>
              </tr>
              <tr>
                <th>Salary:</th>
                <td>$<%= employee.salary.toLocaleString() %></td>
              </tr>
              <tr>
                <th>Date of Joining:</th>
                <td><%= new Date(employee.dateOfJoining).toLocaleDateString() %></td>
              </tr>
              <tr>
                <th>Supervisor:</th>
                <td>
                  <% if (employee.supervisor) { %>
                    <a href="/employees/details/<%= employee.supervisor._id %>">
                      <%= employee.supervisor.firstName %> <%= employee.supervisor.lastName %>
                    </a>
                  <% } else { %>
                    <span class="text-muted">None</span>
                  <% } %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <!-- Location Information -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Location Information</h5>
          </div>
          <div class="card-body">
            <table class="table table-borderless">
              <tr>
                <th width="40%">Country:</th>
                <td><%= employee.country %></td>
              </tr>
              <tr>
                <th>State:</th>
                <td><%= employee.state %></td>
              </tr>
              <tr>
                <th>City:</th>
                <td><%= employee.city %></td>
              </tr>
              <tr>
                <th>Address:</th>
                <td><%= employee.address %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      
      <!-- Subordinates -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-people"></i> Subordinates</h5>
          </div>
          <div class="card-body">
            <% if (subordinates.length > 0) { %>
              <ul class="list-group">
                <% subordinates.forEach(sub => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= sub.firstName %> <%= sub.lastName %>
                    <span class="badge bg-primary"><%= sub.jobTitle %></span>
                  </li>
                <% }); %>
              </ul>
            <% } else { %>
              <p class="text-muted text-center">No subordinates</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Timeline -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Record Timeline</h5>
          </div>
          <div class="card-body">
            <ul class="list-unstyled">
              <li class="mb-2">
                <i class="bi bi-plus-circle text-success"></i>
                <strong>Created:</strong> <%= new Date(employee.createdAt).toLocaleString() %>
              </li>
              <li>
                <i class="bi bi-pencil-square text-warning"></i>
                <strong>Last Updated:</strong> <%= new Date(employee.updatedAt).toLocaleString() %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Delete Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete employee "<%= employee.firstName %> <%= employee.lastName %>"?
          <% if (subordinates.length > 0) { %>
            <div class="alert alert-warning mt-2">
              <strong>Warning:</strong> This employee is supervising <%= subordinates.length %> subordinate(s). You cannot delete this employee.
            </div>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <% if (subordinates.length === 0) { %>
            <form action="/employees/delete/<%= employee._id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html>
